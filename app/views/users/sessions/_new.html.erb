<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.text_field :login, :id => 'user-login', :autocomplete => :off, :placeholder => 'Email or Username...' %>
  <%= f.password_field :password, :id => 'user-password', :autocomplete => :off, :placeholder => 'Password...' %>

  <input type="submit" data-loading-text='Logging In...' value="Log In" class="btn btn-success" autocomplete='off'>
<% end %>