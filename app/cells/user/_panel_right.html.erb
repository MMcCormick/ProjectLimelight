<div class="user-panel">
    <h2><%= @user.username %></h2>
    <div class="score" title="Your Popularity"><%= user.pop_total.to_i %></div>
    <div class="clear"></div>

    <%= render 'follows/btn', :current_user => @current_user, :target => user %>
    
    <%= image_tag user_default_picture_path(@user, :d => [85, 65]), :style => "max-width: 85px;", :class => 'profile-image' %>

    <div class="right">
        <div class="stat followers">
            <div class="label">Followers</div>
            <a class="btn" href="<%= user_followers_path @user %>"><span><%= user.followers_count.to_i %></span></a>
        </div>
        <div class="stat following">
            <div class="label">Following</div>
            <a class="btn" href="<%= user_following_users_path @user %>"><span><%= user.following_users_count.to_i %></span> Users</a>
            <a class="btn topics" href="<%= user_following_topics_path @user %>"><span><%= user.following_topics_count.to_i %></span> Topics</a>
        </div>
    </div>

    <div class="clear"></div>

    <div class="links">
        <a class="badge btn" href="#">
            <div class="icon badge-icon"></div>
            Badges
        </a>
        <a class="user-contributions btn" href="<%= user_path @user %>">
            <div class="icon user-contributions-icon"></div>
            Contributions
        </a>
    </div>

</div>