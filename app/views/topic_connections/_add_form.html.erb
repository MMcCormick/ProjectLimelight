<form action="<%= add_connection_path %>" id="add-connection-form" method="POST" class="ajax">

  <div class="field">
    <%= collection_select(:connection, :con_id, connection_types, :id, :name, :prompt => "Connection Type") %>
  </div>

  <div class="lClear required">
    <%= label_tag "tc-auto", "Connected topic" %>
    <%= text_field_tag "connection[topic_name]", nil, :id => "tc-auto" %>
  </div>

  <%= hidden_field_tag "connection[topic_id]", "" %>
  <%= hidden_field_tag "topic_id", topic.id %>

  <div class="actions">
    <%= submit_tag "Add", :class => "submit" %>
  </div>
</form>