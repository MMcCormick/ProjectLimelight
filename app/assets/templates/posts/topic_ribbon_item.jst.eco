<a href="<%= if LL.App.current_user && LL.App.current_user.get('id') == @model.get('id') then "/activity#{@item.get('topic').get('url')}" else "#{@item.get('url')}#{@item.get('topic').get('url')}" %>">
  <div class='name'><%= @item.get('topic').get('name') %></div>
  <div class='count'><%= @item.get('count') %> Posts</div>

  <% if @on: %>
    <img src='<%= @item.get('topic').get('images').square.large %>' />
  <% else: %>
    <img src='<%= @item.get('topic').get('images').square.normal %>' />
  <% end %>
</a>