<% content_for :page_header do %>
  <h1><%= @title %></h1>
<% end %>

<% content_for :sidebar_right do %>
  <%= render_cell(:topic, :sidebar_right, current_user, @topic) %>
<% end %>

<% if !@followers.empty? %>
  <ul class="alt-list">
      <li class="labels">
        <div>User</div>
        <div>Popularity</div>
        <div>Followers</div>
      </li>
    <%= render 'users/std_list', :users => @followers %>
  </ul>
<% else %>
  <div class="empty">This topic has no followers!</div>
<% end %>