<% if LL.App.current_user.hasRole('admin'): %>
  <div class="btn edit-btn">Edit</div>
<% end %>

<% if @topic.get('summary'): %>
  <p><%= @topic.get('summary') %></p>
<% end %>

<% if @topic.get('aliases').length > 0: %>
  <h4>Also Known As</h4>
  <ul class='unstyled'>
    <% for name in @topic.get('aliases'): %>
    <li><%= name.name %></li>
    <% end %>
  </ul>
<% end %>