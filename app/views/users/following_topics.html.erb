<% content_for :page_header do %>
  <h1><%= @title %></h1>
<% end %>

<% if current_user != @user %>
  <% content_for :sidebar_right do %>
    <%= render_cell(:user, :sidebar, @user, current_user, '') %>
  <% end %>
<% end %>

<% if !@following_topics.empty? %>
  <ul class="alt-list">
    <li class="labels">
      <div>Topic</div>
      <div>Popularity</div>
      <div>Followers</div>
    </li>
    <%= render 'topics/std_list', :topics => @following_topics %>
  </ul>
<% else %>
  <div class="empty">This user is not following any topics!</div>
<% end %>