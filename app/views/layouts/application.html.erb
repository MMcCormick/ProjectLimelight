<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!--<link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>-->
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag "application" %>
  </head>
  <body id="<%= params[:controller].parameterize %>_c">
    <div id="application">
      <header id="header">
        <% top_image = image_tag "top-logo.png", :alt => "Project Limelight" %>
        <%= link_to top_image, :root, :class => "p logo" %>

        <a id="contribute" class="ac" href="{{ path('object_contribute') }}">
          <div class="plus-green-icon"></div>
          Contribute
        </a>

        <% if signed_in? %>
          <%= link_to "Logout", destroy_user_session_path, :id => "logout" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, :id => "login" %>
          <%= link_to "Sign Up", new_user_registration_path, :id => "register" %>
        <% end %>

        <div id="search">
          <input type="text" value="Search" class="iclear w"/>
        </div>
      </header>
      <div id="content">
        <%= render_cell :user, :sidebar_left %>

        <div id="sidebar-right" class="scroll">
          <div class="wrap">
            <%= yield :sidebar_right %>
          </div>
        </div>

        <div id="page_header">
          <div class="wrap">
            <section class="round">
              <% flash.each do |key, value| %>
                <div class="flash <%= key %>"><%= value %></div>
              <% end %>
            </section>
            <%= yield :page_header %>
          </div>
        </div>

        <div id="page">
          <div id="page-sb1" class="">
            <div class="wrap">
              <%= yield :page_sidebar1 %>
            </div>
          </div>
          <div id="page-sb2" class="">
            <div class="wrap">
              <%= yield :page_sidebar2 %>
            </div>
          </div>
          <div id="page-sb3" class="">
            <div class="wrap">
              <%= yield :page_sidebar3 %>
            </div>
          </div>
          <div id="page_content">
            <div class="wrap">
              <%= yield %>
              <% if Rails.env.development? %>
                <%= debug(params) %>
                <div id="footnotes_holder"></div>
              <% end %>
            </div>
          </div>
          <div id="page_cover"></div>
        </div>
      </div>
      <footer id="footer">
        <%= yield :footer %>
        <div id="plt"><%= load_time %></div>
      </footer>

      <div id="ajax-loading">Loading...</div>
      <div id="ajax-notice"></div>
      <div id="ajax-error"></div>
    </div>

    <!-- HIDDEN TOOLS -->
    <div id="mouse-score"></div>
    <div style="display: none">
      <div id="static-data" data-d='{"oSearchUrl":"", "fetchEmbedUrl":"<%= embedly_fetch_path %>"}'></div>
      <%= render "core_object_shares/form" %>

      <div id="auth_box">
        <div class="items">
          <div class="form-toggle auth-login on" data-target="#auth-login">Login</div>
          <div class="form-toggle auth-register" data-target="#auth-register">Register</div>
          <div id="auth-login">
            <%= render "users/sessions/new" %>
          </div>
          <div id="auth-register" class="hide">
            <%= render "users/registrations/new" %>
          </div>
        </div>
      </div>
    </div>

    <%= javascript_include_tag "application" %>
  </body>
</html>
