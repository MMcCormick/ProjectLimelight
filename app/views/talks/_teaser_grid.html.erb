<% cache("teaser-#{object.id.to_s}-grid-top") do %>

<div class="teaser grid <%= object._type.downcase %>" data-push="<%= object.id %>">
  <div class="wrapper">
    <div class="content">
      <%= render 'core_objects/feed_teaser_title', :title => user_link(object.user_snippet), :object => object %>

<% end %>

      <div class="createdC">
        <%= time_ago_in_words(object.created_at, false) %> ago
      </div>

<% cache("teaser-#{object.id.to_s}-grid-bottom") do %>

      <p><%= parse_mentions(object.content, object) %></p>
    </div>

    <div class="connectionsC">
      <div class="s">
        <div class="oType"><div class="talk-grey-icon" title="talk"></div></div>
        <a href="<%= url_for object %>" class="commentC p">
          <div class="comment-icon"></div>
          <%= object.response_count.to_i %>
        </a>
      </div>

      <% if object.topic_mentions.length > 0 %>
        <div class="mentions s">
          <div class="head">mentions</div>
          <% object.topic_mentions.each do |topic| %>
            <%= render 'topics/tag', :topic => topic, :include_image => false %>
          <% end %>
        </div>
      <% end %>
    </div>

<% end # cache %>

    <% if can? :destroy, object %>
      <%= render :partial => 'core_objects/disable_btn', :locals => { :path => disable_talk_path(object) } %>
    <% end %>

    <%= render 'core_objects/feed_teaser_actions', :object => object %>
    <div class="pc pc_<%= object.id.to_s %>"></div>
    <div class="pt_<%= object.id.to_s %> hide"><%= object.pt %></div>
  </div>
</div>