<% content_for :page_header do %>
  <h1><%= @title %></h1>
<% end %>

<% if current_user != @user %>
  <% content_for :sidebar_right do %>
    <%#= render_cell(:user, :sidebar, @user, current_user, '') %>
  <% end %>
<% end %>

<% if !@followers.empty? %>
  <ul class="alt-list">
    <li class="labels">
      <div>User</div>
      <div>Popularity</div>
      <div>Followers</div>
    </li>
    <%= render 'users/std_list', :users => @followers %>
  </ul>
<% else %>
  <div class="empty">This user has no followers!</div>
<% end %>