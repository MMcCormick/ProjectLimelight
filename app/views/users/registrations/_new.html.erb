<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'ajax' }) do |f| %>
  <div class="errors"></div>

  <div class="line lClear">
    <%= f.label :username %>
    <%= f.text_field :username, :autocomplete => :off %>
  </div>

  <div class="line lClear">
    <%= f.label :email %>
    <%= f.email_field :email, :autocomplete => :off %>
  </div>

  <div class="line lClear">
    <label for="register_password">Password</label>
    <%= f.password_field :password, :id => 'register_password', :autocomplete => :off %>
  </div>

  <%= f.hidden_field :invite_code_id %>

  <%= f.submit "Sign Up", :class => 'submit' %>
<% end %>