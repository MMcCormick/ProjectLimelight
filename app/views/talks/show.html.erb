<% if @talk.status == "active" %>
  <% content_for :sidebar_right do %>
    <%= render_cell(:core_object, :sidebar_right, current_user, @talk) %>
  <% end %>

  <div class="object-show talk">
    <div class="createdC">
      <%= user_link @talk.user_snippet %>
      <div class="response s">
        <span>@</span>
        <a href="<%= core_object_url(@talk.response_to) %>" class="r">
          <%= @talk.response_to.title %>
          <div class="<%= @talk.response_to.type.parameterize %>-grey-icon icon"></div>
        </a>
      </div>
      <%= time_ago_in_words(@talk.created_at, false) %> ago

    </div>

    <% if can? :destroy, @talk %>
      <div class="ac disable conf conf hide" title="remove this post" data-m="PUT" data-url="<%= disable_talk_path @talk %>">X</div>
    <% end %>

    <div class="content">
      <p><%= parse_mentions(@talk.content, @talk) %></p>
    </div>
    <div class="clear"></div>

  </div>
<% else %>
  <div class="empty">This talk has been removed</div>
<% end %>

<%= render_cell :comment, :thread, @talk.id, true %>