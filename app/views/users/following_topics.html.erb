<% content_for :page_header do %>
  <h1><%= @title %></h1>
<% end %>

<% if current_user != @user %>
  <% content_for :sidebar_right do %>
    <%= render_cell(:user, :sidebar_right, current_user, @user) %>
  <% end %>
<% end %>

<% if !@following_topics.empty? %>
  <ul class="alt-list">
    <li class="labels">
      <div>Topic</div>
      <div>Popularity</div>
      <div>Followers</div>
    </li>
    <% @following_topics.each do |following_topic| %>
      <%= render 'topics/teaser', :topic => following_topic %>
    <% end %>
  </ul>
<% else %>
  <div class="empty">This user is not following any topics!</div>
<% end %>