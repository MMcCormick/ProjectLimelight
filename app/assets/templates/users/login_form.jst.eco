<form method="post" action="/users/sign_in">
  <div>
    <label for="user_login" class="over-apply"></label>
    <input type="text" size="30" name="user[login]" id="user-login" autocomplete="off" placeholder="Email or Username...">
  </div>
  <div>
    <input type="password" size="30" name="user[password]" id="user-password" autocomplete="off" placeholder="Password...">
  </div>
  <input type="submit" value="Log In" class="btn btn-success">
</form>