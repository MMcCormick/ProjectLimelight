<form action="<%= add_connection_path %>" id="add-connection-form" method="POST" class="ajax group">

  <div class="field lClear bottom required">
    <%= label_tag "tc-auto", "Connected Topic" %>
    <%= text_field_tag "connection[topic_name]", nil, :id => "tc-auto" %>
  </div>

  <div class="field">
    <%= label_tag "connection[con_id]", "Connection Type" %>
    <%= collection_select(:connection, :con_id, connection_types, :id, :name, :prompt => true) %>
  </div>

  <%= hidden_field_tag "connection[topic_id]" %>
  <%= hidden_field_tag "topic_id", topic.id %>

  <div class="actions">
    <%= submit_tag "Add" %>
  </div>
</form>