<div class='topic-card' data-id='<%= topic.id %>' data-pid='<%= topic.encoded_id %>'>
  <div class='name'>
    <%= topic.name %>
    <span class='cancel ac' title="I'm not interested in this topic." data-m='post' data-url='<%= sentiment_create_path(:neutral) %>' data-d='{"type":"Topic","id":"<%= topic.encoded_id %>"}'>X</span>
  </div>
  <div class='actions'>
    <%= render 'follows/btn', :current_user => current_user, :target => topic %>
  </div>
  <%= image_tag topic_default_picture(topic, 150, 150, 'fillcropmid'), :style => "max-width: 180px;", :alt => topic.name, :title => topic.name %>
</div>