<% if @model.get('limelight_post'): %>
  <% if @model.get('limelight_post').embed: %>
    <div class="media">
      <%- @model.get('limelight_post').embed %>
    </div>
  <% else if @model.get('limelight_post').image: %>
    <div class="media">
      <img src="<%= @model.get('limelight_post').image %>" alt="" />
    </div>
  <% end %>
<% else: %>
  <% if @model.get('images').length > 0: %>
    <div class="media">
      <% for image in @model.get('images'): %>
        <img src="<%= image.url %>" alt="" />
      <% end %>
    </div>
  <% end %>
<% end %>

<div class="info">
  <% if @model.get('limelight_post'): %>
    <div class="title">
      <p><%= @model.get('limelight_post').title %></p>
      <div>Originally posted to limelight <%= @model.get('limelight_post').created_at %> ago</div>
    </div>
  <% else: %>
    <textarea id="post-form-title" spellcheck="false" autocomplete="off" name="title" placeholder='Title...'><%= @model.get('title') %></textarea>
  <% end %>
</div>
<div class="switcher hide">
  <i class="icon-chevron-left left"></i>
  <span class="help">choose image</span>
  <i class="icon-chevron-right right"></i>
</div>