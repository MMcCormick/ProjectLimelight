<div class="user-panel">
  <img src='<%= @user.image_url(50, 50, 'fillcropmid') %>' />
  <h4><%= @user.get('username') %></h4>
  <div class='actions'></div>
</div>

<ul class='menu unstyled'>
  <li>
    <a class='first <%= 'on' if @page == 'user_feed' %>' href="<%= if LL.App.current_user.get('id') == @user.get('id') then '/' else "/users/#{@user.get('slug')}" %>">
      Feed
      <i class="icon icon-chevron-right"></i>
    </a>
  </li>
  <li>
    <a class=' <%= 'on' if @page == 'like_feed' %>' href="<%= "/users/#{@user.get('slug')}/likes" %>">
      Likes
      <i class="icon icon-chevron-right"></i>
    </a>
  </li>
  <li>
    <a class='<%= 'on' if @page == 'activity_feed' %>' href="<%= "/users/#{@user.get('slug')}/activity" %>">
      Talks
      <i class="icon icon-chevron-right"></i>
    </a>
  </li>
</ul>