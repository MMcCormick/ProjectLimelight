<% if @video.status == "active" %>
  <% content_for :sidebar_right do %>
    <%= render_cell(:core_object, :sidebar, current_user, @video) %>
  <% end %>

  <% content_for :page_header do %>
    <h1 class="core-object"><%= @video.title_clean %></h1>

    <div class="createdC">
      <%= time_ago_in_words(@video.created_at, false) %> ago by
      <%= user_link @video.user_snippet %>
    </div>
    <div class="clear"></div>
  <% end %>

  <div class="object-show">
    <% if can? :destroy, @video %>
      <%= render :partial => 'core_objects/disable_btn', :locals => { :path => disable_video_path(@video) } %>
    <% end %>

    <%= video_embed(@video.sources[0], 620, 475, nil, nil, @video.embed_html) %>

    <div class="content">
      <p><%= parse_mentions(@video.content, @video) %></p>
    </div>
    <div class="clear"></div>
  </div>
<% else %>
  <div class="empty">This video has been removed</div>
<% end %>

<%= render "core_objects/response_header", :object => @video %>
<%= render "core_objects/responses", :responses => @responses %>