<% content_for :head do %>
  <link type="text/css" rel="stylesheet" href="http://freebaselibs.com/static/suggest/1.3/suggest.min.css" />
<% end %>

<% content_for :js do %>
  <script type="text/javascript" src="http://freebaselibs.com/static/suggest/1.3/suggest.min.js"></script>
<% end %>

<% content_for :page_header do %>
  <h1><%= @title %></h1>
  <h1 id="health-nav">
    <a href="<%= topics_by_health_path %>">All</a>
    <% 6.times do |n| %>
      <a href="<%= topics_by_health_path :h => n %>"><%= n %></a>
    <% end %>
  </h1>
<% end %>

<% if !@topics.empty? %>
  <div class="health-list">
    <%= render 'health_list', :topics => @topics %>
  </div>
<% else %>
  <div class="empty">No topics found!</div>
<% end %>