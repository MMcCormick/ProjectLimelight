<% title = capture do %>
  <%= link_to object.title, object %>
  <% if object.response_to %>
    @
    <a href="{{ path('object_show', {'slug': object.connectedFrom[0].connectedTo.slug }) }}" class="p">
      [connected title]
      <span class="tType">Talk</span>
    </a>
  <% end %>
<% end %>

<% content = capture do %>
  <%= parse_mentions(markdown(object.content), object) %>
<% end %>

<% created_by = capture do %>
  <%= time_ago_in_words(object.created_at, false) %> ago by
  <%= user_link object.user_snippet %>
<% end %>

<%= render 'core_objects/list_teaser_title', :object => object, :title => title, :content => content, :created_by => created_by %>

<%= render 'core_objects/list_teaser_mentions', :object => object %>

<%= render 'core_objects/list_teaser_action_box', :object => object %>