<div class='top'>
  <h5><%= @topic.get('name') %></h5>
  <% if @topic.get('primary_type'): %>
    <h5 class='sub'><%= @topic.get('primary_type') %></h5>
  <% end %>
</div>

<div class='meat'>
  <% if LL.App.current_user && LL.App.current_user.hasRole('admin'): %>
    <div class="btn edit-btn">Edit</div>
  <% end %>

  <p><%= if @topic.get('summary') then @topic.get('summary') else 'No summary...' %></p>

  <% if @topic.get('websites').length > 0: %>
    <h5>Websites</h5>
    <ul class='unstyled'>
      <% for website in @topic.get('websites'): %>
        <li><a href="<%= website.url %>" target="_blank" rel="nofollow"><%= website.name %></a></li>
      <% end %>
    </ul>
  <% end %>

  <% if @topic.get('aliases').length > 0: %>
    <h5>Also Known As</h5>
    <ul class='unstyled'>
      <% for name in @topic.get('aliases'): %>
      <li><%= name.name %></li>
      <% end %>
    </ul>
  <% end %>
</div>