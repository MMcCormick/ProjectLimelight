<p><%= parse_mentions(object.content, object) %></p>

<%= user_link object.user_snippet %>
<div class='created_at'>
  <%= time_ago_in_words(object.created_at, false) %> ago
</div>

<div class='actions'>
  <a href="<%= url_for object %>" class="comments">
    <%= object.response_count.to_i %> comments
  </a>
  <%= render 'likes/btn', :current_user => current_user, :object => object %>
  <%= render 'core_object_shares/share_btn', :current_user => current_user, :object => object %>
</div>

<% if can? :destroy, object %>
  <%= render :partial => 'core_objects/disable_btn', :locals => { :path => disable_talk_path(object) } %>
<% end %>