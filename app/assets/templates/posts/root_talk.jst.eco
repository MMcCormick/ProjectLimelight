<div class="root-talk">
  <img src="<%= @talk.get('user').get('images').square.small %>">
  <a class="ulink" data-id="<%= @talk.get('user').get('id') %>" href="<%= @talk.get('user').get('url') %>"><%= @talk.get('user').get('username') %></a>
  <p>
    <%= @talk.get('content') %>
  </p>
  <div class='when top-right'></div>
  <span class="actions">
    <span class="comment-form">+Comment (<span><%= @talk.get('talking_count') %></span>)</span>
  </span>
</div>