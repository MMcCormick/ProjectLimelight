<%= form_for current_user, :html => { :class => 'change-username-form ajax' } do |f| %>

  <div class="errors"></div>
  
  <div class="field">
    <%= f.text_field :username, :autocomplete => :off %>
  </div>

  <div class="actions">
    <%= f.submit "Confirm", :class => "submit" %>
  </div>

<% end %>