<form>
  <div class="modal-header">
    <% if @modal: %>
      <a class="close" data-dismiss="modal">Ã—</a>
    <% end %>
    <h3>+Post</h3>
  </div>
  <div class="modal-body">
    <div class='errors'></div>
    <div class="main-content">
      <textarea id="post-form-content" class='include-in-submit' spellcheck="false" autocomplete="off" autocomplete='off' name="content" placeholder="<%= @placeholder_text %>"><%= @initial_text %></textarea>
      <div class='preview'>
        <input id="post-form-fetch-url" type="text" placeholder='Paste URL to fetch...' autocomplete='off' />
        <div class='btn' id='fetch-url-btn'>Fetch URL</div>
      </div>
      <div class='icons'>
        <div class="icon ll-icon-link" rel='tooltip' title='Add Link' data-type='Link'></div>
        <div class="icon ll-icon-picture" rel='tooltip' title='Add Picture' data-type='Picture'></div>
        <div class="icon ll-icon-video" rel='tooltip' title='Add Video' data-type='Video'></div>
        <i class="cancel-preview icon icon-remove" rel='tooltip' title='Cancel Link'></i>
      </div>
    </div>

    <!--<div class="tweet_content hide">-->
      <!--<div class="head">tweet</div>-->
      <%#= f.text_area :tweet_content, :spellcheck => false, :autocomplete => :off %>
    <!--</div>-->

    <div class="mentions">
      <div>
        <input class='topic-mention' type="text" id="post-form-mention1" spellcheck="false" autocomplete="off" name="mention_name[]" placeholder="Tag topic..." />
        <input class='topic-mention-id' type="hidden" id="post-form-mention1-id" spellcheck="false" autocomplete="off" name="mention_id[]" />
      </div>
      <div>
        <input class='topic-mention' type="text" id="post-form-mention2" spellcheck="false" autocomplete="off" name="mention_name[]" placeholder="Tag topic..." />
        <input class='topic-mention-id' type="hidden" id="post-form-mention2-id" spellcheck="false" autocomplete="off" name="mention_id[]" />
      </div>
    </div>

    <!--<%# unless signed_in? && current_user.get_social_connect('twitter') %>-->
      <!--<div class="connect_twitter" data-auth='<%#= user_omniauth_authorize_path(:twitter) %>'>-->
        <!--Connect Twitter-->
        <!--<div class="twitter-bird-small"></div>-->
      <!--</div>-->
    <!--<%# else %>-->
      <!--<div class="tweet">-->
        <!--<%#= f.check_box :tweet, :autocomplete => :off %>-->
        <!--tweet this-->
      <!--</div>-->
    <!--<%# end %>-->

    <input type="hidden" id="post-form-source-url" name="source_url" class='include-in-submit' />
    <input type="hidden" id="post-form-source-name" name="source_name" class='include-in-submit' />
    <input type="hidden" id="post-form-source-vid" name="source_video_id" class='include-in-submit' />
    <input type="hidden" id="post-form-embed" name="embed_html" class='include-in-submit' />
    <input type="hidden" id="post-form-type" name="type" value="Talk" class='include-in-submit' />
    <input type="hidden" id="post-form-parent-id" name="response_to_id" class='include-in-submit' />
    <input type="hidden" id="post-form-remote-image-url" name="remote_image_url" autocomplete="off" class='include-in-submit' />
    <input type="hidden" id="post-form-image-cache" name="image_cache" autocomplete="off" class='include-in-submit' />
    <div id="picture_pupB"></div>
  </div>
  <div class="modal-footer">
    <div class="btn btn-success submit" data-loading-text='Submitting...'>Submit</div>
    <% if @modal: %>
      <span class="cancel btn">Cancel</span>
    <% end %>
  </div>

</form>