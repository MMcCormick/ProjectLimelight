<button class="btnp <%= !signed_in? || !current_user.is_following_topic?(target_topic.id) ? 'followB' : 'unfollowB' %> fol_<%= target_topic.id %>">
  <span class="default" data-url="<%= topic_follow_path %>" data-d='{"id":"<%= target_topic.id %>"}'>
    <div class="plus-green-icon icon"></div>
    Follow
  </span>
  <span class="triggered" data-url="<%= topic_follow_path %>" data-d='{"id":"<%= target_topic.id %>"}'>
    <div class="minus-green-icon icon"></div>
    Unfollow
  </span>
</button>