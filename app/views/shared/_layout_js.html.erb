<!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="/offline/javascripts/jquery1.7.1.js"><\/script>')</script>

<script src="http://js.pusher.com/1.12/pusher.min.js"></script>
<script>window.Pusher || document.write('<script src="/offline/javascripts/pusher1.12.js"><\/script>')</script>
<script type="text/javascript">
  <% unless Rails.env.production? %>
    Pusher.log = function(message) {
//      if (window.console && window.console.log) window.console.log(message);
    };

    // Flash fallback logging - don't include this in production
//    WEB_SOCKET_DEBUG = true;
  <% end %>

  WEB_SOCKET_SUPPRESS_CROSS_DOMAIN_SWF_ERROR = true;
  var pusher = new Pusher('<%= Pusher.key %>', { encrypted: true });
</script>

<!-- Freebase -->
<script type="text/javascript" src="https://www.gstatic.com/freebase/suggest/3_1/suggest.min.js"></script>

