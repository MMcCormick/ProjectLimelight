<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

<title><%= title %></title>

<meta name="description" content="<%= description %>">
<meta name="author" content="">

<!-- Mobile viewport optimized: j.mp/bplateviewport -->
<meta name="viewport" content="width=device-width,initial-scale=1">


<!-- Open Graph -->
<% if @og_tags %>
  <% @og_tags.each do |tag| %>
    <meta property=<%= tag[0] %> content="<%= tag[1] %>" />
  <% end %>
  <meta property="og:site_name" content="Limelight" />
  <meta property="fb:admins" content="1229430023" />
<% end %>


<!-- Google Tags -->
<meta itemprop="name" content="Limelight">
<meta itemprop="description" content="Connect through topics.">
<meta itemprop="image" content="http://static.p-li.me.s3.amazonaws.com/assets/images/splash-logo.png">

<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
<%= stylesheet_link_tag "application" %>
<%#= stylesheet_link_tag "webkit", :type => "text/chrome/safari" %>
<!--[if lt IE 9]>
  <%= stylesheet_link_tag "ie" %>
  <script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>
<![endif]-->

<%= csrf_meta_tags %>

<%= yield :head %>

<%= javascript_include_tag 'modernizr' %>
