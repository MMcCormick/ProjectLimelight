<% content_for :page_header do %>
  <h1><%= @user.username %>'s followers</h1>
<% end %>

<% if current_user != @user %>
  <% content_for :sidebar_right do %>
    <%= render_cell(:user, :sidebar_right, @user) %>
  <% end %>
<% end %>

<% if !@followers.empty? %>
  <ul class="alt-list">
    <li class="labels">
      <div>User</div>
      <div>Popularity</div>
      <div>Followers</div>
    </li>
    <% @followers.each do |follower| %>
      <%= render 'users/teaser', :user => follower %>
    <% end %>
  </ul>
<% else %>
  <div class="empty">This user has no followers!</div>
<% end %>