<img src="<%= @talk.get('user').get('images').square.small %>">
<a class="ulink" data-id="<%= @talk.get('user').get('id') %>" href="<%= @talk.get('user').get('url') %>"><%= @talk.get('user').get('username') %></a>
<div class='when'></div>
<p>
  <%= @talk.get('content') %>
</p>
<div class="actions">
  <% if @talk.get('user').get('status') == 'active': %>
    <span class="comment-form">+Comment (<span><%= @talk.get('response_count') %></span>)</span>
  <% end %>
</div>