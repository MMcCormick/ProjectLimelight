<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @news.title %>
</p>

<p>
  <b>Content:</b>
  <%= parse_mentions(markdown(@news.content), @news) %>
</p>

<%= default_image(@news, [100, 100]) %>

<%= render 'favorites/favorite_btn', :object => @news %>
<%= render 'reposts/repost_btn', :object => @news %>

<%= link_to 'Edit', edit_news_path(@news) %>