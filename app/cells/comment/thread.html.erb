<div class="comment-thread c_<%= @talk_id %> <%= 'hide' if @comments.length == 0 %>" data-d='{"talk_id":"<%= @talk_id %>"}'>

  <% if @with_forms %>
    <%= render "comments/form", :talk_id => @talk_id, :reply => false %>
    <div class="hide">
      <%= render "comments/form", :talk_id => @talk_id, :reply => true %>
    </div>
  <% end %>

  <% @comments.each do |comment| %>
    <%= render "comments/comment", :comment => comment, :current_user => @user %>
  <% end %>
</div>